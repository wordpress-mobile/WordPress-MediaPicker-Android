<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MediaPicker.ActionBar" parent="Theme.MediaPicker">
        <item name="android:textColorSecondary">?attr/colorOnSecondary</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
        <item name="colorControlNormal">?attr/colorOnSecondary</item>
        <item name="android:editTextColor">?attr/colorOnSecondary</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
    </style>

    <style name="MediaPicker.NoActionBar" parent="Theme.MediaPicker">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MediaPicker.SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="submitBackground">?attr/colorPrimary</item>
        <item name="queryBackground">?attr/colorPrimary</item>
    </style>

    <style name="MediaPicker.ToolBar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextColor">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:background">@null</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.DayNight</item>
        <item name="android:elevation">0dp</item>
        <item name="colorControlNormal">?attr/colorOnSecondary</item>
    </style>

    <style name="Subtitle">
        <item name="android:textColor">@color/color_on_surface_high</item>
    </style>

    <style name="Button.Colored" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:paddingStart">@dimen/major_100</item>
        <item name="android:paddingEnd">@dimen/major_100</item>
        <item name="backgroundTint">@color/button_colored_bg_selector</item>
    </style>
</resources>