<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/minor_25">

    <ImageView
        android:id="@+id/image_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/photo_picker_item_background"
        tools:ignore="ContentDescription"/>

    <TextView
        android:id="@+id/text_selection_count"
        android:layout_width="@dimen/major_150"
        android:layout_height="@dimen/major_150"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="@dimen/minor_100"
        android:layout_marginStart="@dimen/minor_100"
        android:background="@drawable/photo_picker_circle_selector"
        android:elevation="4dp"
        android:importantForAccessibility="no"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_minor_80"
        tools:text="5"
        tools:ignore="UnusedAttribute"/>

</FrameLayout>
