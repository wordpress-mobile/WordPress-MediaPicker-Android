<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MediaPicker.ActionBar" parent="Theme.MediaPicker">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:colorControlNormal">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="MediaPicker.NoActionBar" parent="Theme.MediaPicker">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MediaPicker.SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="submitBackground">?attr/colorPrimary</item>
        <item name="queryBackground">?attr/colorPrimary</item>
    </style>

    <style name="MediaPicker.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/MediaPicker.ActionMode.TitleTextStyle</item>
    </style>

    <style name="MediaPicker.ToolBar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="theme">@style/Theme.MediaPicker</item>
        <item name="popupTheme">@style/Theme.AppCompat.DayNight</item>
    </style>

    <style name="Subtitle">
        <item name="android:textColor">@color/color_on_surface_high</item>
    </style>

    <style name="MediaPicker.ActionMode.TitleTextStyle" parent="@android:style/TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Button.Colored" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:paddingStart">@dimen/major_100</item>
        <item name="android:paddingEnd">@dimen/major_100</item>
        <item name="backgroundTint">@color/button_colored_bg_selector</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>